<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/include"
            layout="@layout/write_toolbar" />

        <EditText
            android:elevation="3dp"
            android:paddingHorizontal="10dp"
            android:id="@+id/period_title"
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/rectangle"
            android:hint="제목을 입력해 주세요"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingVertical="16dp"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include" />

        <EditText
            android:id="@+id/period_content"
            android:paddingHorizontal="10dp"
            android:elevation="3dp"
            android:layout_width="261dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/rectangle"
            android:hint="내용을 입력해 주세요"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingVertical="16dp"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/period_title" />

        <Spinner
            android:id="@+id/start_day"
            android:layout_width="40dp"
            android:layout_height="28dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/rectangle"
            android:elevation="3dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/period_content"
            app:layout_constraintVertical_bias="0.516" />

        <Spinner
            android:id="@+id/start_month"
            android:layout_width="40dp"
            android:layout_height="28dp"
            android:layout_marginStart="60dp"
            android:background="@drawable/rectangle"
            android:elevation="3dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/period_content"
            app:layout_constraintVertical_bias="0.516" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="/"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/start_month"
            app:layout_constraintTop_toBottomOf="@+id/period_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/start_day"
            app:layout_constraintTop_toBottomOf="@+id/period_content" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="88dp"
            android:text="선택 항목"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/period_content" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>